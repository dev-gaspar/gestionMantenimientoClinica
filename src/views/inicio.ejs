<!DOCTYPE html>
<html>
  <head>
    <title>Inicio</title>
    <link rel="stylesheet" type="text/css" href="estilos/estilos.css" />
    <link rel="stylesheet" type="text/css" href="icons/css/all.css" />
  </head>
  <body>
    <nav>
      <ul>
        <li>
          <a href="/"> <i class="fa fa-home"></i> Inicio</a>
        </li>
        <li>
          <a href="/asignaciones"> <i class="fa fa-ticket"></i> Asignaciones</a>
        </li>
        <li>
          <a href="/mantenimientos"
            ><i class="fa fa-wrench"></i> Mantenimientos</a
          >
        </li>
        <% if(user.rol === "admin") { %>
        <li>
          <a href="/administracion">
            <i class="fa fa-tachometer"></i> administracion</a
          >
        </li>
        <% } %>
        <li>
          <a href="/logout"><i class="fa fa-right-from-bracket"></i> Salir</a>
        </li>
      </ul>
    </nav>
    <div class="contenedor">
      <h1 class="text-center">Bienvenid@ <%= user.nombre%></h1>
      <div class="form-group border-form">
        <h2>Sistema de reporte de mantenimiento Cl√≠nica Central</h2>
        <button onclick="solicitud()" class="btn">
          Generar solicitud de mantenimiento
        </button>
        <button onclick="asignaciones()" class="btn">
          Ver asignacion de trabajos(modo lectura)
        </button>
        <button onclick="mantenimientos()" class="btn">Mantenimientos</button>
        <% if(user.rol === "admin" || user.rol ==="Soporte Tecnico") { %>
        <button onclick="generarInformeMantenimiento()" class="btn">
          Generar informes de mantenimiento
        </button>
        <% } %> <% if(user.rol === "admin") { %>
        <button onclick="administracion()" class="btn">Administrador</button>
        <% } %>
        <br />
      </div>
    </div>
    <script>
      function solicitud() {
        window.location.href = "/solicitud";
      }

      function administracion() {
        window.location.href = "/administracion";
      }

      function asignaciones() {
        window.location.href = "/asignaciones";
      }

      function generarInformeMantenimiento() {
        window.location.href = "/lista-trabajos";
      }

      function mantenimientos() {
        window.location.href = "/mantenimientos";
      }
    </script>
  </body>
</html>
